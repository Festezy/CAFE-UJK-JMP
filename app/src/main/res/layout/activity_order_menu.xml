<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/amarin"
    tools:context=".activity.OrderMenuActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:scaleType="center"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvMenuNameOrderM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#4CAF50"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:text="nama Menu" />

    <TextView
        android:id="@+id/tvPriceOrderM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:text="harga"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.935"
        app:layout_constraintStart_toEndOf="@+id/tvMenuNameOrderM"
        app:layout_constraintTop_toBottomOf="@+id/tvDayTimeOrderM"
        tools:text="Harga" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="50dp"
        android:textAlignment="textStart"
        android:textStyle="bold"
        android:text="Detail"/>

    <TextView
        android:id="@+id/tvDetailOrderM"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        tools:text="Desc" />


    <TextView
        android:id="@+id/tvDayDateOrderM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:text="tanggal"
        android:textColor="#43A047"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Tanggal" />

    <TextView
        android:id="@+id/tvDayTimeOrderM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:text="jam"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/etTableNumberOrderM"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="35dp"
        android:ems="10"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#000000"
        android:background="#D9FFDA"
        android:hint="Masukan no bangku"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPriceOrderM" />

    <Button
        android:id="@+id/btnSaveOrderM"
        android:layout_width="125dp"
        android:backgroundTint="#4CAF50"
        android:layout_height="wrap_content"
        app:cornerRadius="20dp"
        android:layout_gravity="center_horizontal"
        android:text="save order"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTableNumberOrderM" />


